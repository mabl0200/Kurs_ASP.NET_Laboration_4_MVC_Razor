@model LoanBookViewModel

<h1>Alla lån</h1>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Titel</th>
            <th>Författare</th>
            <th>Lånetid</th>
            <th>Låntagare</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var loan in Model.BorrowedBooks)
        {
            <tr>
                <td>@loan.Book.Name</td>
                <td>@loan.Book.Author</td>
                <td>@loan.StartOfLoanPeriod - @loan.EndOfLoanPeriod</td>
                <td>@loan.Customer.GetFullName()</td>
            </tr>
        }

    </tbody>
</table>

<form>
    <button asp-controller="LoanBook" asp-action="Form" type="submit">Låna bok</button>
</form>

